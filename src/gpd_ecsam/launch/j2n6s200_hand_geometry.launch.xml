<launch>
    <arg name="node"/>

    <param name="$(arg node)/finger_width" value="0.01"/>
    <param name="$(arg node)/hand_outer_diameter" value="0.14"/>
    <param name="$(arg node)/hand_depth"
           value="0.065"/> <!--the finger length (measured from hand base to finger tip)-->
    <param name="$(arg node)/hand_height" value="0.02"/>
    <param name="$(arg node)/init_bite"
           value="0.0065"/> <!--The minimum distance between the fingertip and the side of the object that is oriented toward the hand-->
</launch>


